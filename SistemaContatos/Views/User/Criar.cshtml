@using SistemaContatos.Enums
@model UserModel
@{
    ViewData["Title"] = "Cadastro de Usuário";
}

<div class="add-contact">

    <div>
        <h1>@ViewData["Title"]</h1>
    </div>

    <form asp-action="Criar" asp-controller="User" method="post">
        <div class="form-group">
            <label for="name">Nome</label>
            <input type="text" asp-for="FirstName" class="form-control" id="name">
            @Html.ValidationMessageFor(x => x.FirstName)
        </div>
        <div class="form-group">
            <label for="name">Sobrenome</label>
            <input type="text" asp-for="LastName" class="form-control" id="name">
            @Html.ValidationMessageFor(x => x.LastName)
        </div>
        <div class="form-group">
            <label for="mail">Email</label>
            <input type="email" asp-for="Email" class="form-control" id="mail">
            @Html.ValidationMessageFor(x => x.Email)
        </div> 
        <div class="form-group">
            <label for="login">Login</label>
            <input type="text" asp-for="Login" class="form-control" id="login">
            @Html.ValidationMessageFor(x => x.Email)
        </div>
        <div class="form-group">
            <label for="perfil">Perfil</label>
            <select asp-for="Perfil" class="form-control select-dark">
                <option value="">Selecione</option>
                <option value="@PerfilEnum.admin">Administrador</option>
                <option value="@PerfilEnum.padrao">Padrão</option>
            </select>
            @Html.ValidationMessageFor(x => x.Perfil)
        </div>
        <div class="form-group">
            <label for="pwd">Senha</label>
            <input type="password" asp-for="Password" class="form-control" id="pwd">
            @Html.ValidationMessageFor(x => x.Password)
        </div>
        <button type="reset" class="btn btn-secondary btn-block">Cancelar</button>
        <button type="submit" class="btn btn-primary btn-block">Enviar</button>
    </form>
</div>