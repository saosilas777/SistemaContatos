@model ContatoModel
@{
    ViewData["Title"] = "Editar Contato";
}

<div class="add-contact">

    <div>
        <h1>@ViewData["Title"]</h1>
    </div>

    <form asp-action="Editar" asp-controller="Contato" method="post" id="form-edit">
        <input asp-for="Id" hidden />
        <div class="form-group">
            <label for="name">Nome</label>
            <input type="text" asp-for="Name" class="form-control" id="name">
            @Html.ValidationMessageFor(x => x.Name)
        </div>
        <div class="form-group">
            <label for="mail">Email</label>
            <input type="email" asp-for="Email" class="form-control" id="mail">
            @Html.ValidationMessageFor(x => x.Email)
        </div>
        <div class="form-group">
            <label for="phone">Telefone</label>
            <input type="tel" asp-for="Phone" class="form-control" id="phone">
            @Html.ValidationMessageFor(x => x.Phone)
        </div>
        <button type="submit" class="btn btn-primary col-md-12">Salvar</button>
        <div class="btn-back-cancel">
            <button type="reset" class="btn btn-secondary btn-cancel col-md-6">Cancelar</button>
            <a role="button" asp-action="Index" asp-controller="Contato" class="btn btn-warning btn-back col-md-6">Voltar</a>
        </div>
        
    </form>
</div>