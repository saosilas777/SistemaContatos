@model ContatoModel
@{
    ViewData["Title"] = "Cadastro de Contato";
}

<div class="add-contact">

    <div>
        <h1>@ViewData["Title"]</h1>
    </div>

    <form asp-action="Criar" asp-controller="Contato" method="post">
        <div class="form-group">
            <label for="name">Nome</label>
            <input type="text" asp-for="Name" class="form-control" id="name">
        </div>
        <div class="form-group">
            <label for="mail">Email</label>
            <input type="email" asp-for="Email" class="form-control" id="mail">
        </div>
        <div class="form-group">
            <label for="phone">Telefone</label>
            <input type="tel" asp-for="Phone" class="form-control" id="phone">
        </div>
        <button type="reset" class="btn btn-secondary btn-block">Cancelar</button>
        <button type="submit" class="btn btn-primary btn-block">Enviar</button>
    </form>
</div>